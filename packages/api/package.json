    "tag-version": "git add . && git commit -m 'chore(release): bump api version'; git tag api-$npm_package_version",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
